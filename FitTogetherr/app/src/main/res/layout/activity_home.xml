<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="54dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#40B0B0B4"
            android:orientation="vertical">

            <Button
                android:id="@+id/grudhome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fields"
                android:backgroundTint="#3F8CDD"
                android:text="Грудь"
                android:textAllCaps="true"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/gruddoma" />

            <Button
                android:id="@+id/bichome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fields"
                android:backgroundTint="#3F8CDD"
                android:text="бицепс"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/bicdoma" />

            <Button
                android:id="@+id/spinahome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fields"
                android:backgroundTint="#3F8CDD"
                android:text="Спина"
                android:textAllCaps="true"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/spinadoma" />

            <Button
                android:id="@+id/trichome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fields"
                android:backgroundTint="#3F8CDD"
                android:text="трицепс"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/tricdoma" />

            <Button
                android:id="@+id/nogihome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fields"
                android:backgroundTint="#3F8CDD"
                android:text="ноги"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/nogidoma" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>